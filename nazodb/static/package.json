{
    "devDependencies": {
      "autoprefixer": "^10.4.14",
      "browserslist": "^4.21.10",
      "concurrently": "^8.2.0",
      "postcss": "^8.4.27",
      "postcss-cli": "^10.1.0",
      "sass": "^1.64.2"
    },
    "browserslist": [
      "last 2 versions",
      "> 1%",
      "maintained node versions",
      "not dead"
    ],
    "scripts": {
      "scss:watch": "sass --watch scss:css",
      "postcss:watch": "postcss css/*.css --watch --use autoprefixer -d css",
      "watch": "concurrently \"npm run scss:watch\" \"npm run postcss:watch\""
    }

  }
